textView = findViewById(R.id.textView);
button = findViewById(R.id.button);
checkBox = findViewById(R.id.checkBox);
textView.setOnTouchListner(new View.OnTouchListner(){
 	@Override
	public boollean onTouch(View v, MotionEvent event){
		Log.i("test", "textView onTouch");
		return false;
	}
});
button.setOnClickListner(new View.OnClickListner(){
	@Override
	public void onClick(View v){
		Log.i("test", "button onClick");
	}
});
checkBox.setOnCheckedChangedListner(new CompoundButton.OnCheckedChangeListner(){
