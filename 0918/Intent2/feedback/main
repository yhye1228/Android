package com.iot.feedback;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

import androidx.activity.EdgeToEdge;
import androidx.activity.result.ActivityResult;
import androidx.activity.result.ActivityResultCallback;
import androidx.activity.result.ActivityResultLauncher;
import androidx.activity.result.contract.ActivityResultContracts;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {
    public static final String Tag_MSG = "message";
    private EditText editText;
    private ActivityResultLauncher<Intent> launcher;
    private Button button;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);

        Intent intent = getIntent();
        String getmsg = intent.getStringExtra(FeedBack.Tag_MSG);
        editText = findViewById(R.id.editText);

        button = findViewById(R.id.button);

        //ActivityResultLauncher 등록 및 콜백 정의
        launcher = registerForActivityResult(new ActivityResultContracts.StartActivityForResult(),
                new ActivityResultCallback<ActivityResult>() {
                    @Override
                    public void onActivityResult(ActivityResult o) {   // ActivityResult에는 resultcode가 있다.
                        if(o.getResultCode() == RESULT_OK){
                            Intent data = o.getData();
                            if(data != null){
                                String resultData = data.getStringExtra("subMsg");
                                editText.setText(resultData);
                            }
                        }
                    }
        });

        button.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Intent intent = new Intent(MainActivity.this, FeedBack.class);
                //launcher를 이용하여 데이터 보내기
                intent.putExtra("msg", editText.getText().toString());       // 데이터 전달
                launcher.launch(intent);                    // FeedBack 엑티비티 실행
            }
        });

    }
}
